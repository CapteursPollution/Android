<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.android.fragments.LastDataFragment">
    <data>
        <variable
            name="lastData"
            type="com.example.android.models.DataModel"/>
    </data>
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            card_view:cardCornerRadius="6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/date"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="22sp"
                    android:textColor="@color/primaryColor"
                    android:text="@{lastData.dateMeasurement, default=mockdate}" />
                <TextView
                    android:id="@+id/pm25"
                    android:layout_gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text='@{"PM25: " + lastData.pm2_5.toString() + "    µg/m^3", default=mockpm25}'
                    android:textSize="20sp"
                    android:textColor="@color/primaryDarkColor"/>
                <TextView
                    android:id="@+id/pm10"
                    android:layout_gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text='@{"PM10: " + lastData.pm10.toString() + "    µg/m^3", default=mockpm10}'
                    android:textSize="20sp"
                    android:textColor="@color/primaryDarkColor"/>
                <Button
                    android:id="@+id/buttonRefresh"
                    android:layout_gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="@string/refresh"
                    android:textSize="20sp"
                    android:textColor="@color/primaryDarkColor"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
</layout>
