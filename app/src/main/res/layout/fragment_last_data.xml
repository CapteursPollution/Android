<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.android.fragments.HomeFragment">
    <data>
        <variable
            name="lastDataPM"
            type="com.example.android.models.DataPM"/>
        <variable
            name="lastDataHT"
            type="com.example.android.models.DataHT"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="55dp">
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            card_view:cardCornerRadius="6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:weightSum="15">


                <TextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:layout_gravity="center"
                    android:text='@{" Air Quality\n "+lastDataPM.dateMeasurement, default=mockdate}'
                    android:textColor="@color/primaryColor"
                    android:textSize="15sp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"></FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/pm25"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_marginLeft="20dp"
                        android:text= "pm25"
                        android:textColor="@color/primaryDarkColor"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/pm25bis"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:text='@{lastDataPM.pm2_5.toString() + " µg/m^3", default=mockpm25}'
                        android:textColor="@color/primaryDarkColor"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/pm10"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_marginLeft="20dp"
                        android:text= "pm10"
                        android:textColor="@color/primaryDarkColor"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/pm10bis"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:text='@{lastDataPM.pm10.toString() + " µg/m^3", default=mockpm10}'
                        android:textColor="@color/primaryDarkColor"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/temperature"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_marginLeft="20dp"
                        android:text= "Temperature"
                        android:textColor="@color/primaryDarkColor"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/temperaturebis"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:text='@{lastDataHT.temperature.toString() + " °C", default=mocktemp}'
                        android:textColor="@color/primaryDarkColor"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/humidity"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_marginLeft="20dp"
                        android:text= "Humidity"
                        android:textColor="@color/primaryDarkColor"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/humiditybis"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:text='@{lastDataHT.humidity.toString() + " %", default=mockhum}'
                        android:textColor="@color/primaryDarkColor"
                        android:textSize="15sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/buttonRefresh"
                    android:layout_gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:text="@string/refresh"
                    android:textSize="15sp"
                    android:textColor="@color/primaryDarkColor"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:layout_weight="1" />
    </LinearLayout>
</layout>
